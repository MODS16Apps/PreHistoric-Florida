<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:gravity="center"
    android:padding="30dip"
    android:weightSum="1">


    <TextView
        android:layout_width="545dp"
        android:layout_height="218dp"
        android:text="Welcome to the Prehistoric Scavenger Hunt! \n\n See if you can figure out the answer to each riddle by searching for information around the exhibit!"
        android:textSize="30sp"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="250dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="@string/back_label"
            android:background="@drawable/arrowleft"
            android:layout_marginLeft="70dp"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/home_button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="@string/home_label"
            android:background="@drawable/homebutton"
            android:layout_marginLeft="10dp" />
        <Button
            android:id="@+id/next_button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:text="@string/next_label"
            android:background="@drawable/arrowright"
            android:layout_marginLeft="10dp" />

    </LinearLayout>



</LinearLayout>